#include <iostream>
#include <iomanip>
using namespace std;
int main() {
    int N;
    cout << "Enter the number of prescriptions (N): ";
    cin >> N;

    double total_cost = 0.0;
    cout << std::fixed << std::setprecision(2);

    for (int i = 1; i <= N; ++i) {
        double cost;
        cout << "Enter cost for prescription " << i << ": ";
        cin >> cost;

        cout << "Prescription " << i << " Cost: " << cost;

        // Check for 'Low Cost Prescription' condition
        if (cost < 600.0) {
            cout << " (Low Cost Prescription)";
        }
        cout << "\n";

        total_cost += cost;
    }

    cout << "\n--- Summary ---\n";
    cout << "Total Cost for all prescriptions: " << total_cost << "\n";

    return 0;
}
